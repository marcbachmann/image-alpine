#!/sbin/openrc-run
# Copyright (c) 2017 Marc Bachmann <marc.brookman@gmail.com>
# Released under the MIT license.

description="Export openrc service status using prometheus grok exporter"
pidfile="/run/${RC_SVCNAME}.pid"
command=/usr/local/bin/start-prometheus-openrc-exporter
start_stop_daemon_args="--stdout /var/log/${RC_SVCNAME}.log --stderr /var/log/${RC_SVCNAME}.log"
command_background="true"

depend() {
    need net root
    after docker
}
